{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
{{#foreach posts}}
    {{#if @first}}
        <header class="main-header {{#if @blog.cover}}" style="background-image:url({{image}}){{else}}no-cover{{/if}}">
            <div class="image-overlay"></div>
            <nav class="main-nav overlay clearfix">
                {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
                {{#if @blog.navigation}}
                    <a class="portfolio-name" href="{{@blog.url}}"><span class="word"><strong>{{@blog.title}}</strong></span></a>
                    <a class="menu-button icon-menu" href="#"><span class="word"></span></a>
                {{/if}}
            </nav>
            <div class="vertical">
                <div class="main-header-content inner">
                    <div class="main-header-post-content-title">
                        <a href="{{url}}"><h1 class="page-title">{{title}}</h1></a>
                    </div>
                    <div class="main-header-post-content-description">
                        <p class="page-description">{{excerpt words="26"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
                    </div>
                </div>
            </div>
            <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
        </header>
    {{/if}}
{{/foreach}}

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> getallpostsloop}}

</main>
